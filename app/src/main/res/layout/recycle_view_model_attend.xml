<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_account_circle_grey"
            android:layout_alignParentStart="true"
            android:id="@+id/imgKid"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:id="@+id/checkAttend"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Section"
            android:id="@+id/txtKidSection"
            android:layout_toLeftOf="@id/checkAttend"
            android:textColor="#888"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Kid Name"
            android:id="@+id/txtKidName"
            android:padding="10dp"
            android:layout_alignBaseline="@+id/checkAttend"
            android:layout_alignBottom="@+id/checkAttend"
            android:layout_toEndOf="@+id/imgKid"
            android:textColor="#000"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>